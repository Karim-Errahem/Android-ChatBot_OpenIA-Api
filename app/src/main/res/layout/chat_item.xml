<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="8dp"
        android:backgroundTint="#3A9CED"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat_view">
<TextView
    android:id="@+id/left_chat_text_view"
    android:textSize="18sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:textColor="#FFFCFC"></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_marginStart="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="8dp"
        android:backgroundTint="#FFFCFC"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_view">

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#3A9CED"
            android:textSize="18sp"
            >

            </TextView>


    </LinearLayout>


</RelativeLayout>